<?xml version='1.0' encoding='ISO-8859-1' ?> 
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>news</display-name>
  <welcome-file-list>
    <welcome-file>login.jsf</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>Filtro</filter-name>
    <filter-class>br.com.mauricio.news.filter.JPAFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Filtro</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>FiltroAutorizacao</filter-name>
    <filter-class>br.com.mauricio.news.filter.FiltroAutorizacao</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroAutorizacao</filter-name>
    <url-pattern>/sistema/*</url-pattern>
  </filter-mapping>
   
  <filter>
     <filter-name>filtroIE9</filter-name>
     <filter-class>br.com.mauricio.news.filter.FiltroCorrecaoIE9</filter-class>
  </filter>
	 
  <filter-mapping>
     <filter-name>filtroIE9</filter-name>
     <url-pattern>*.jsf</url-pattern>
  </filter-mapping>
 
  <context-param>
    <param-name>com.sun.faces.writeStateAtFormEnd</param-name>
    <param-value>false</param-value>
  </context-param>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.jsf</url-pattern>
  </servlet-mapping>
	<context-param>
	    <param-name>javax.faces.PROJECT_STAGE</param-name>
	    <param-value>Development</param-value>
	</context-param>  
  
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>aristo</param-value><!-- flick cupertino glass-x-->
  </context-param>
  <filter>
    <filter-name>primeUploadFilter</filter-name>
    <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>primeUploadFilter</filter-name>
    <servlet-name>Faces Servlet</servlet-name>
  </filter-mapping>
<context-param>  
  <param-name>com.sun.faces.disableVersionTracking</param-name>  
  <param-value>true</param-value>  
</context-param> 
<context-param>
    <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
    <param-value>true</param-value>
</context-param>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/erro.xhtml</location>
  </error-page> 
  <error-page>
    <exception-type>javax.faces.application.ViewExpiredException</exception-type>
    <location>/login.xhtml</location>
  </error-page>
  <listener>
	<listener-class>
		org.quartz.ee.servlet.QuartzInitializerListener
	</listener-class>
  </listener> 
</web-app>